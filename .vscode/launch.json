{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "file": "${workspaceFolder}/frontend/dist/dev/index.html",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch AccountLinkComplete",
            "file": "${workspaceFolder}/frontend/html/accountlink-complete.html"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Api Tests",
            "program": "${workspaceFolder}/api/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/api/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Jest Api Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/api/src/node_modules/.bin/jest",
            "protocol": "inspector",
            "args": [ "-c","${workspaceFolder}/api/src/jest.config.js","--runInBand" ],
            "windows": {
                "program": "${workspaceFolder}/api/src/node_modules/jest/bin/jest.js"
            }
        }, 
        {
            "name": "Jest Backend Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/src/node_modules/.bin/jest",
            "protocol": "inspector",
            "args": ["signin.test.ts","-t","amazon", "-c","${workspaceFolder}/backend/src/jest.config.js","--runInBand", ],
            "windows": {
                "program": "${workspaceFolder}/backend/src/node_modules/jest/bin/jest.js"
            }
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Frontend",
            "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--compilers",
                "js:@babel/register",
                "${workspaceFolder}/server/frontend/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        },
    ]
}
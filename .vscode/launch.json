{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "type": "node",
            "request": "launch",
            "name": "Api Tests",
            "program": "${workspaceFolder}/api/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/api/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Jest Api Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/api/src/node_modules/.bin/jest",
            "protocol": "inspector",
            "args": [ "-c","${workspaceFolder}/api/src/jest.config.js","--runInBand" ],
            "windows": {
                "program": "${workspaceFolder}/api/src/node_modules/jest/bin/jest.js"
            }
        }, 
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Frontend",
            "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--compilers",
                "js:@babel/register",
                "${workspaceFolder}/server/frontend/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Backend Unit",
            "program": "${workspaceFolder}/backend/src/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/backend/src/test/test",
                "--timeout 5000ms --grep 'handler /signin'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Backend Link",
            "program": "${workspaceFolder}/backend/src/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/backend/src/test/linktest",
                "--timeout 5000ms --grep 'handler /signin'"
            ],
            "internalConsoleOptions": "openOnSessionStart",
        },


        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/skill/src/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/skill/src/test/client_test.js",
                "--grep getDayFromTrashType"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\skill\\src\\client.js"
        }
    ]
}